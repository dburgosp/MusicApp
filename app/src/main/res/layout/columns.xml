<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="64dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/row_padding"
        android:layout_marginEnd="@dimen/general_padding"
        android:background="@drawable/shadow_layer"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/horizontalImageView"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/horizontalTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingEnd="@dimen/row_padding"
            android:paddingStart="@dimen/row_padding"
            android:paddingTop="@dimen/row_padding"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/horizontalSubtitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/row_padding"
            android:paddingEnd="@dimen/row_padding"
            android:paddingStart="@dimen/row_padding"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>